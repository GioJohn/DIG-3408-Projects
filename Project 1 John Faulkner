	<script>
	//get the results when the button is clicked
	var myAnswers = ['Superman','The Flash','Batman','Green Lantern'];
	var points = [0,0,0,0];
	
	//set up a function to run when the window is loaded
	//grab the button and wait for a click
	function init(){
		var button = document.getElementById('quizButton');
		button.onclick = checkQuiz;
	}
	
		function checkQuiz() {
			var q;
			var q2;
			var q3;
			var q4;
			var q5;
			var q6;
			var q7;
			var q8;
			var q9;
			var q10;
			
			var inputs = document.getElementsByName('q');
			q = findValue(inputs);
			switch(q) {
				case 'Blue': 
					points[2]++;
					break;
				case 'Red': 
					points[3]++;
					break;
				case 'Black': 
					points[1]++;
					break;
				case 'Green': 
					points[0]++;
					break;
			}
			
			var inputs = document.getElementsByName('q2');
			q = findValue(inputs);
			switch(q) {
				case 'Under the bed': 
					points[2]++;
					break;
				case 'In your closet': 
					points[3]++;
					break;
				case 'In the trash': 
					points[1]++;
					break;
				case 'You are wearing it': 
					points[0]++;
					break;
			}
			
			var inputs = document.getElementsByName('q3');
			q = findValue(inputs);
			switch(q3) {
				case 'Flight': 
					points[3]++
					break;
				case 'Super Speed': 
					points[1]++
					break;
				case 'Super Strength': 
					points[0]++
					break;
				case 'I do not have powers': 
					points[2]++
					break;
			}
			
			var inputs = document.getElementsByName('q4');
			q = findValue(inputs);
			switch(q) {
				case 'For Friends': 
					points[2]++;
					break;
				case 'For Glory': 
					points[3]++;
					break;
				case 'For Justice': 
					points[1]++;
					break;
				case 'For revenge': 
					points[0]++;
					break;
			}
			
			var inputs = document.getElementsByName('q5');
			q = findValue(inputs);
			switch(q) {
				case 'Catch them on the way down': 
					points[0]++;
					break;
				case 'Jump up and catch them halfway': 
					points[1]++;
					break;
				case 'Use grapple gadget to catch him': 
					points[2]++;
					break;
				case 'Let them fall': 
					points[3]++;
					break;
			}
			
			var inputs = document.getElementsByName('q6');
			q = findValue(inputs);
			switch(q) {
				case 'A underground cave': 
					points[2]++;
					break;
				case 'The Arctic': 
					points[0]++;
					break;
				case 'In deep Space': 
					points[3]++;
					break;
				case 'In the ocean': 
					points[1]++;
					break;
			}
			
			var inputs = document.getElementsByName('q7');
			q = findValue(inputs);
			switch(q) {
				case 'Photographer': 
					points[1]++;
					break;
				case 'Reporter': 
					points[0]++;
					break;
				case 'Playboy billionaire': 
					points[2]++;
					break;
				case 'Schoolteacher': 
					points[3]++;
					break;
			}
			
			var inputs = document.getElementsByName('q8');
			q = findValue(inputs);
			switch(q) {
				case 'No': 
					points[2]++;
					break;
				case 'Its too dangerous': 
					points[3]++;
					break;
				case 'I work alone': 
					points[0]++;
					break;
				case 'Have not met them yet': 
					points[1]++;
					break;
			}
			
			var inputs = document.getElementsByName('q9');
			q = findValue(inputs);
			switch(q) {
				case 'Finish them': 
					points[3]++;
					break;
				case 'Hand them over to the police': 
					points[2]++;
					break;
				case 'Knock them out': 
					points[0]++;
					break;
				case 'Announce your victory': 
					points[1]++;
					break;
			}
			
			var inputs = document.getElementsByName('q10');
			q = findValue(inputs);
			switch(q) {
				case 'Vigilante': 
					points[2]++;
					break;
				case 'Amateur': 
					points[3]++;
					break;
				case 'Savior': 
					points[0]++;
					break;
				case 'Menace': 
					points[1]++;
					break;
			}
			
			//alert('Clicked');
			//alert(inputs[0]);
			//keep track of the highest point value so far
			maxScore = 0;
			//keep track of where that high score is (the index)
			maxIndex = 0;
			//cycle through to find the highest score
			for (var i=0; i<points.length; i++) {
				if (points[i] > maxScore) {
					//saves the index if this is a new high score
					maxIndex = i;
				}
			}
			//grabs the house corresponding with the high score's index
			q = myAnswers[maxIndex];
			//displays results
			//note that this example does not deal with cases where two houses are even
			
			//alert('Clicked');
			//displays results
			displayQ(q);
		}
		
	function findValue(inputs) {
		var checked;
		for (var i=0; i<inputs.length; i++) {
			if (inputs[i].checked) {
				alert(inputs[i].value);
				checked = inputs[i].value;
				return(checked);
			}
		}
		//if house hasn't been defined, no choice was picked
		if (!checked) {
			alert('Please choose a Answer.');
		}
	}
		
		//display a results image for the chosen house
		function displayQ(q){
			//make a new image object
			var image = document.createElement('img');
			//assign it CSS properties with a class
			image.className = 'q';
			//grab the paragraph to append the image to
			var source = document.getElementById('qParagraph');
			var text = 'Congratulations! You are ' + q + '!';
			//pick the right image source by q using a switch statement
			switch(q){
				case 'Superman':
					image.src = 'https://media.giphy.com/media/JslxiL7b0ygow/giphy.gif';
					break;
				case 'The Flash':
					image.src = 'http://media.giphy.com/media/ZSvAC5c9RkW4g/giphy.gif';
					break;
				case 'Batman':
					image.src = 'https://heavyeditorial.files.wordpress.com/2014/03/batman-hot-dog.gif?w=450';
					break;
				case 'Green Lantern':
					image.src = 'http://33.media.tumblr.com/f8439bf4f8102186ee075c100955419b/tumblr_nqly8uznVs1repoz9o1_500.gif';
					break;
			}
			
			//add the image to the paragraph
			source.appendChild(image);
			//append the text on a new line
			source.innerHTML += '<br>' + text;
		}
		//call the initial function when the window is loaded
		window.onload = init;
	</script>
